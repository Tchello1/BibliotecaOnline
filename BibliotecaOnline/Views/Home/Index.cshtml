
@{
    ViewBag.Title = "Início";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <br />
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Início</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">BibliotecaOnline</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                Bem vindo à área do colaborador.
                @* realizar pesquisa *@
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h3 class="box-title">Busca no acervo</h3>
                            </div>
                            <div class="box-body">
                                <div class="form-group">
                                    <form method="post">
                                        <div class="input-group">
                                            <input type="text" name="ConsultaExemplar" class="form-control" placeholder="Busque por título, autor, ano, código de barra...">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-success">Pesquisar</button>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                Todos direitos reservados para BibliotecaOnline.
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
